@model Project.ENTITY.Concrete.Message

@{
    ViewData["Title"] = "ViewMessage";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4> Mesaj Detay Sayfası </h4>
            <br />
            <form class="forms-sample">
                @Html.HiddenFor(x=>x.MessageID)
                <div class="form-group">
                    @Html.Label("İsim")
                    @Html.TextBoxFor(x=> x.Name, new { @class = "form-control"})
                </div>
                <div class="form-group">
                    @Html.Label("Telefon Numarası")
                    @Html.TextBoxFor(x=> x.PhoneNumber, new { @class = "form-control"})
                </div>
                <div class="form-group">
                    @Html.Label("Tarih")
                    @Html.TextBoxFor(x=> x.Date, new { @class = "form-control"})
                </div>
                <div class="form-group">
                    @Html.Label("İstenilen Hizmetler")
                    @Html.TextBoxFor(x=> x.SelectedServices, new { @class = "form-control"})
                </div>
            </form>
        </div>
    </div>
</div>