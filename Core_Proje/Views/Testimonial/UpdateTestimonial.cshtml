@model Project.UI.Models.TestimonialViewModel

@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4>Referans Düzenleme Paneli</h4>
            <br />
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <input asp-for="@Model.TestimonialID" style="display:none;" />
                <div class="form-group">
                    <label>Şirket Adı</label>
                    <input type="text" class="form-control" id="CompanyName" asp-for="@Model.CompanyName">
                </div>
                <div class="form-group">
                    <label>Müşteri Adı</label>
                    <input type="text" class="form-control" id="ClientName" asp-for="@Model.ClientName">
                </div>
                <div class="form-group">
                    <label>Ünvan</label>
                    <input type="text" class="form-control" id="Title" asp-for="@Model.Title">
                </div>
                <div class="form-group">
                    <label>Comment</label>
                    <textarea class="form-control" id="Comment" asp-for="@Model.Comment"></textarea>
                </div>
                <div class="form-group">
                    <label>Fotoğraf</label>
                    <br />
                    <input type="file" asp-for="@Model.Image">
                </div>
                <br />
                <button type="submit" class="btn btn-outline-primary mr-2">Ekle</button>
            </form>
        </div>
    </div>
</div>