@using Project.ENTITY.Concrete
@model List<Portfolio>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<style>
    .dropdown-item:hover, .dropdown-item:focus {
        color: lightgrey;
        text-decoration: none;
        background-color: #13151b;
    }
</style>

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th scope="col" class="sort" data-sort="name">Proje</th>
                                <th scope="col" class="sort" data-sort="budget">Ücret</th>
                                <th scope="col" class="sort" data-sort="status">Durum</th>
                                <th scope="col" class="sort" data-sort="completion">Tamamlanma Oranı</th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">
                                        <div class="media align-items-center">
                                            <div class="media-body">
                                                <span class="name mb-0 text-sm">@item.Name</span>
                                            </div>
                                        </div>
                                    </th>
                                    <td class="budget">
                                        @item.Price
                                    </td>
                                    <td>
                                        @if (item.Status == true)
                                        {
                                            <div>
                                                Tamamlandı
                                            </div>
                                        }
                                        else
                                        {
                                            <div>
                                                Devam Ediyor
                                            </div>
                                        }
                                    </td>
                                    <td>
                                        <div>
                                            @if (item.Condition > 70)
                                            {
                                                <div class="progress">
                                                    <div class="progress-bar bg-success" role="progressbar" style="width: @item.Condition%" aria-valuenow="@item.Condition" aria-valuemin="0" aria-valuemax="100">@item.Condition%</div>
                                                </div>
                                            }
                                            else if (item.Condition > 50)
                                            {
                                                <div class="progress">
                                                    <div class="progress-bar bg-primary" role="progressbar" style="width: @item.Condition%" aria-valuenow="@item.Condition" aria-valuemin="0" aria-valuemax="100">@item.Condition%</div>
                                                </div>
                                            }
                                            else if (item.Condition > 30)
                                            {
                                                <div class="progress">
                                                    <div class="progress-bar bg-warning" role="progressbar" style="width: @item.Condition%" aria-valuenow="@item.Condition" aria-valuemin="0" aria-valuemax="100">@item.Condition%</div>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="progress">
                                                    <div class="progress-bar bg-danger" role="progressbar" style="width: @item.Condition%" aria-valuenow="@item.Condition" aria-valuemin="0" aria-valuemax="100">@item.Condition%</div>
                                                </div>
                                            }
                                        </div>
                                    </td>
                                    <td class="text-right">
                                        <div class="dropdown">
                                            <a class="btn btn-icon-only text-light" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                <i class="fa fa-ellipsis-v"></i>
                                            </a>
                                            <div class="dropdown-menu dropdown-menu-right dropdown-menu-arrow">
                                                <a class="dropdown-item" href="/Portfolio/DeletePortfolio/@item.PortfolioID">Sil</a>
                                                <a class="dropdown-item" href="/Portfolio/EditPortfolio/@item.PortfolioID">Güncelle</a>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<a href="/Portfolio/AddPortfolio/" class="btn btn-outline-primary">Yeni Proje Girişi</a>



